<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackground">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/top_margin"
            android:src="@drawable/arrow_back_24px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/iconsColor" />

        <TextView
            style="@style/Text.Medium22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/top_margin"
            android:color="?attr/mainTextColor"
            android:text="@string/vacancyTopText"
            app:layout_constraintStart_toEndOf="@id/backArrow"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/likeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginEnd="@dimen/right_margin"
            android:src="@drawable/favorites_inactive_24px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/iconsColor" />

        <ImageView
            android:id="@+id/shareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginEnd="@dimen/between_icons"
            android:src="@drawable/sharing_24px"
            app:layout_constraintEnd_toStartOf="@id/likeButton"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vacancyName"
            style="@style/Text.Bold32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/from_arrow_to_Text"
            android:color="?attr/mainTextColor"
            android:text="@string/vacancyName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backArrow" />

        <TextView
            android:id="@+id/salary"
            style="@style/Text.Medium22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/microTop"
            android:color="?attr/mainTextColor"
            android:text="@string/salaryText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vacancyName" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/card_height"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/between_text_card"
            android:layout_marginEnd="@dimen/standart_margin"
            android:backgroundTint="?attr/formsBackgroundColor"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/salary">

            <ImageView
                android:id="@+id/employerLabel"
                android:layout_width="@dimen/employer_in_card"
                android:layout_height="@dimen/employer_in_card"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/standart_margin"
                android:layout_marginTop="@dimen/standart_margin"
                android:layout_marginBottom="@dimen/standart_margin"
                android:src="@drawable/employer_logo"
                app:layout_constraintBottom_toBottomOf="@id/card_view"
                app:layout_constraintStart_toStartOf="@id/card_view"
                app:layout_constraintTop_toTopOf="@id/card_view" />

            <TextView
                android:id="@+id/employerText"
                style="@style/Text.Medium22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_in_card"
                android:layout_marginTop="@dimen/standart_margin"
                android:text="@string/employerNameText"
                app:layout_constraintStart_toEndOf="@id/card_view"
                app:layout_constraintTop_toBottomOf="@id/card_view" />

            <TextView
                android:id="@+id/cityText"
                style="@style/Text.Regular16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_in_card"
                android:layout_marginTop="@dimen/city_in_card"
                android:text="@string/cityText"
                app:layout_constraintStart_toEndOf="@id/card_view"
                app:layout_constraintTop_toBottomOf="@id/card_view" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/experienceText"
            style="@style/Text.Medium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/between_text_card"
            android:color="?attr/mainTextColor"
            android:text="@string/expirience_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view" />

        <TextView
            android:id="@+id/experience"
            style="@style/Text.Regular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/microTop"
            android:color="?attr/mainTextColor"
            android:text="@string/_1_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/experienceText" />

        <TextView
            android:id="@+id/schedule"
            style="@style/Text.Regular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/image_margin_medium"
            android:color="?attr/mainTextColor"
            android:text="@string/schedule"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/experience" />

        <TextView
            android:id="@+id/descriptionText"
            style="@style/Text.Medium22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/big_top"
            android:color="?attr/mainTextColor"
            android:text="@string/description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/schedule" />

        <TextView
            android:id="@+id/jobFunctionsText"
            style="@style/Text.Medium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/standart_margin"
            android:color="?attr/mainTextColor"
            android:text="@string/description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descriptionText" />

        <TextView
            android:id="@+id/jobFunctions"
            style="@style/Text.Regular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/microTop"
            android:color="?attr/mainTextColor"
            android:text="@string/n"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jobFunctionsText" />

        <TextView
            android:id="@+id/jobSkillsText"
            style="@style/Text.Medium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/standart_margin"
            android:color="?attr/mainTextColor"
            android:text="@string/skills"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jobFunctions" />

        <TextView
            android:id="@+id/jobSkills"
            style="@style/Text.Regular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/microTop"
            android:color="?attr/mainTextColor"
            android:text="@string/skills_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jobSkillsText" />

        <TextView
            android:id="@+id/jobConditionText"
            style="@style/Text.Medium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/standart_margin"
            android:color="?attr/mainTextColor"
            android:text="@string/conditionText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jobSkills" />

        <TextView
            android:id="@+id/jobCondition"
            style="@style/Text.Regular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/microTop"
            android:color="?attr/mainTextColor"
            android:text="@string/conditionslist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jobConditionText" />

        <TextView
            android:id="@+id/workerSkillsText"
            style="@style/Text.Medium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/standart_margin"
            android:color="?attr/mainTextColor"
            android:text="@string/worker_skills"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jobCondition" />

        <TextView
            android:id="@+id/workerSkills"
            style="@style/Text.Regular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/microTop"
            android:color="?attr/mainTextColor"
            android:text="@string/worker_skill_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/workerSkillsText" />


        <TextView
            android:id="@+id/contactsText"
            style="@style/Text.Medium22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/big_top"
            android:color="?attr/mainTextColor"
            android:text="@string/description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/workerSkills" />

        <TextView
            android:id="@+id/contactPersonText"
            style="@style/Text.Medium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/standart_margin"
            android:color="?attr/mainTextColor"
            android:text="@string/worker_skills"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contactsText" />

        <TextView
            android:id="@+id/contactPerson"
            style="@style/Text.Regular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/microTop"
            android:color="?attr/mainTextColor"
            android:text="@string/worker_skill_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contactPersonText" />

        <TextView
            android:id="@+id/eMailText"
            style="@style/Text.Medium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/standart_margin"
            android:color="?attr/mainTextColor"
            android:text="@string/e_mail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contactPerson" />

        <TextView
            android:id="@+id/eMail"
            style="@style/Text.Regular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/microTop"
            android:color="?attr/mainTextColor"
            android:text="@string/hrEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eMailText" />

        <TextView
            android:id="@+id/phoneText"
            style="@style/Text.Medium16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/standart_margin"
            android:color="?attr/mainTextColor"
            android:text="@string/phoneText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eMail" />

        <TextView
            android:id="@+id/phone"
            style="@style/Text.Regular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standart_margin"
            android:layout_marginTop="@dimen/microTop"
            android:color="?attr/mainTextColor"
            android:text="@string/example_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phoneText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
